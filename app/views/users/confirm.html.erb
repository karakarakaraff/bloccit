<h2>Sign Up Confirmation</h2>
<h4>Are you sure these values are correct?</h4>

<h5>Name: <%= @user.name %></h5>
<h5>Email: <%= @user.email %></h5>

<div class="row">
  <div class="col-md-8">
    <%= button_to "Yes", {controller: "users", action: "create", params: params.to_unsafe_h}, class: 'btn btn-success' %>
    <%= button_to "No", {controller: "users", action: "new"}, method: :get, class: 'btn btn-danger'  %>
  </div>
</div>
