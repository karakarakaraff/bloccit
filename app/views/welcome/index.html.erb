<div class="jumbotron" style="margin-top: 10px">
  <h1>Bloccit</h1>
    <% if current_user %>
      <p>Hello, <%= current_user.name %>!</p>
      <p><%= link_to "View your profile", user_path(current_user), class: 'btn btn-primary' %> or
      <%= link_to "Sign Out", session_path(current_user), method: :delete, class: 'btn btn-danger' %></p>
    <% else %>
      <p>Bloccit is a hub of tips, fun and randomness to share with your friends!</p>
       <p><%= link_to "Sign in", new_session_path, class: 'btn btn-success' %> or
       <%= link_to "Sign up today!", new_user_path, class: 'btn btn-primary' %></p>
    <% end %>
</div>

<div class="row">
  <div class="col-md-4">
    <h2><i class="glyphicon glyphicon-pushpin"></i>&nbsp; Hot Topics</h2>
    <%= render "topics/popular_topics" %>
  </div>
  <div class="col-md-4">
    <h2><i class="glyphicon glyphicon-send"></i>&nbsp; Popular Posts</h2>
    <%= render "posts/top_posts" %>
  </div>
  <div class="col-md-4">
    <h2><i class="glyphicon glyphicon-comment"></i>&nbsp; Recent Comments</h2>
    <%= render "comments/recent_comments" %>
  </div>
</div>
