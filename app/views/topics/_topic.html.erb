<div class="media">
  <h2><i class="glyphicon glyphicon-pushpin gravatar"></i></h2>
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to topic.name, topic %>
    </h4>
    <p>
      <%= topic.description %><br>
      <small><%= pluralize(topic.posts.count, 'post') %></small>
    </p>
  </div>
</div>
