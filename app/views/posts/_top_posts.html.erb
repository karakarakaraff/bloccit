<% @top_posts = Post.reorder('rank DESC').limit(3) %>
<% @top_posts.each  do |post| %>
  <div class="media">
    <div class="gravatar">
      <%= image_tag post.user.avatar_url(42) %>
    </div>
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to post.title, topic_post_path(post.topic, post) %>
      </h4>
      <small>
        <%= pluralize(post.points, 'point') %> | <%= time_ago_in_words(post.created_at) %> old | <%= link_to post.topic.name, post.topic %>
      </small>
    </div>
  </div>
<% end %>
